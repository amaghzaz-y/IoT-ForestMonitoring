generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EndDevice{
  id Int @id @default(autoincrement())
  DevEUI String @unique
  Eui String @unique
  LastSeen DateTime
  Message Message[]
  Metric Metric[]
  Ems EMS[]
}

model Message{
  id Int @id @default(autoincrement())
  eui String
  payload String
  date DateTime
  endDevice EndDevice @relation(fields: [eui], references: [Eui])
}

model Metric {
  id Int @id @default(autoincrement())
  eui String
  temperature Float
  humidity Float
  sound Float[]
  movement Boolean
  flame Boolean
  lux Float
  date DateTime
  endDevice EndDevice @relation(fields: [eui], references: [Eui])
}

// Emergency Signal
model EMS {
   id Int @id @default(autoincrement())
  eui String
  date DateTime
  endDevice EndDevice @relation(fields: [eui], references: [Eui])
}